<div class="categories-list">
  <% @categories.each do |c| %>
      <div class="card">
        <div class="card-body">
            <div class="row my-auto">
              <div class="col my-auto">
                <%= link_to c.name, category_path(c)%>
              </div>
              <div class="col">
                <div class="row justify-content-end">
                  <div class="action-link">
                    <%= link_to 'Edit Category', edit_category_path(c), class: 'btn btn-primary' %>
                  </div>
                  <div class="action-link">
                    <%= link_to 'Delete Category', category_path(c), method: :delete, class: 'btn btn-danger' %>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
  <% end %>
</div>