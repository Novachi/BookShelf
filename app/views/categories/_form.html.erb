<%= render 'shared/save_errors', model: category%>

<div class="card bg-dark text-light form-card">
  <div class="col-sm-12">
    <%= form_for(category, html: { class: 'form-hotizontal', role: 'form' }) do |f| %>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :name %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Category name', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit(category.new_record? ? 'Create Category' : 'Update Category', class: 'btn btn-primary')%>
          <%= link_to 'Back', root_path, class: 'btn btn-secondary'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
