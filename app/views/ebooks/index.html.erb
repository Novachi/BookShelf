<h1 align="center"> This be ebooks</h1>

<% @ebooks.each.with_index do |ebook, i| %>
  <% if i%3 == 0 %>
    <div class="row">
      <div class="card-deck">
  <% end %>
  <div class="card">
    <%= image_tag ebook.photo_url, class: 'card-img-top', alt: "#{ebook.title} cover", height: '200px'%>
    <div class="card-body">
      <h5 class="card-title"><%= ebook.title %></h5>
      <h6 class="card-title"><%= ebook.author %></h6>
      <p class="card-text"><%= ebook.description %></p>
      <p><small>Available: <%= ebook.stock %></small></p>
      <% if logged_in? %>
        <p class="card-text"><%= link_to 'Add to basket', "/add_to_basket/#{ebook.id}", class: 'btn btn-sm btn-primary' %></p>
      <% end %>
    </div>
  </div>
  <% if i%3 == 2 || i == (@ebooks.count - 1) %>
      </div>
    </div>
  <% end %>
<% end %>