<%= render 'shared/save_errors', model: ebook%>

<div class="card bg-dark text-light form-card">
  <div class="col-sm-12">
    <%= form_for(ebook, html: { class: 'form-hotizontal', role: 'form' }) do |f| %>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :title %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :author %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_field :author, class: 'form-control', placeholder: 'Author', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :abstract %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_area :abstract, class: 'form-control', placeholder: 'Abstract', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :description %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_area :description, class: 'form-control', placeholder: 'Description', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :photo_url %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_field :photo_url, class: 'form-control', placeholder: 'Cover Photo Url', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :price %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.number_field :price, step: :any, class: 'form-control', placeholder: 'Price in PLN', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :stock %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.number_field :stock, class: 'form-control', placeholder: 'Availability in stock', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :category %></strong>
        <div class="col-sm-10 centered-element">
          <%= collection_select(:ebook, :category_id, Category.all, :id, :name,
                            { include_blank: false },
                            { multiple: false, class: 'form-control', 'data-placeholder': 'Select Category' }) %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit(ebook.new_record? ? 'Add Ebook' : 'Update Ebook', class: 'btn btn-primary')%>
          <%= link_to 'Back', root_path, class: 'btn btn-secondary'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
