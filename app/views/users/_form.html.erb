<%= render 'shared/save_errors', model: user%>

<div class="card bg-dark text-light form-card">
  <div class="col-sm-12">
    <%= form_for(user, html: { class: 'form-hotizontal', role: 'form' }) do |f| %>
      <div class="form-group row">
          <strong class="col-sm-2 col-form-label"><%= f.label :username %></strong>
        <div class="col-sm-10 centered-element">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <strong class="col-sm-2 col-form-label"><%= f.label :email%></strong>
        <div class="col-sm-10 centered-element">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
      </div>
      <div class="form-group row">
        <strong class="col-sm-2 col-form-label"><%= f.label :password%></strong>
        <div class="col-sm-10 centered-element">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit(user.new_record? ? 'Sign up' : 'Update User', class: 'btn btn-primary')%>
          <%= link_to 'Back', root_path, class: 'btn btn-secondary'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
